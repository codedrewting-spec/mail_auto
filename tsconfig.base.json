{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@focusflow/types": ["packages/types/src/index.ts"],
      "@focusflow/ui": ["packages/ui/src/index.ts"],
      "@focusflow/api": ["packages/api/src/index.ts"],
      "@focusflow/contracts": ["packages/contracts/src/index.ts"]
    }
  }
}
